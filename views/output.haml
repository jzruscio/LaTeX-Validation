%html
  %head
    %title Check LaTeX
    %script{:src => "http://mathjax.org/MathJax/MathJax.js"}
      MathJax.Hub.Config({
      extensions: ["tex2jax.js"],
      jax: ["input/TeX","output/HTML-CSS"],
      });
      (function (HUB) {
      var MINVERSION = {
      Firefox: 3.0,
      Opera: 9.52,
      MSIE: 6.0,
      Chrome: 0.3,
      Safari: 2.0,
      Konqueror: 4.0,
      Unknown: 10000.0 // always disable unknown browsers
      };
      })(MathJax.Hub);
  %body
    %h1== $\beta$ Analysis of LaTeX file: #{@file_name}
    %form{:action=>'/tmp', :method=>"get", :enctype=>"multipart/ form-data"}
      %input{:type=>"submit", :name => "file", :value=> %"#{@file_name}.OUTPUT.txt"}
    == #{@template}
    %h3 Header
    == #{@header}
    %h3 Packages
    -@packages.each do |pack|
      == #{pack} <br>
    %h3 BibTeX Style File
    == #{@bibtex}
    %h3 Sections
    -@sections.sort{|a,b| a[0].to_i<=>b[0].to_i}.each do |line|
      == Line: #{line[0]} #{line[1]} <br>
    %h3 Macros
    -@macros.each do |macro|
      == #{macro} $#{macro}$ <br>
    %h3 Banned Usages
    -@banned.each do |ban|
      == #{ban} <br>
    %h3 Math
    Download LaTeX file of the Math objects below
    %form{:action=>'/tmp', :method=>"get", :enctype=>"multipart/ form-data"}
      %input{:type=>"submit", :name => "file", :value=> "#{@file_name}.MATH.tex"}
      - @math.sort{|a,b| a[0]<=>b[0]}.each do |line|
        -#%br #{@math_dollar[line[0]]}
    %table{:rules => "groups", :frame => "box"}
      %tr
        %th{:scope => "col"} Line
        %th{:scope => "col"} Math
        %th{:scope => "col"} Math
      - @math.sort{|a,b| a[0]<=>b[0]}.each do |line|
        %tbody
        -line[1].each do |math|
          -if math.equal? line[1].first
            %tr
              %td{:width => "10%"}= "#{line[0]}"
              %td{:width => "50%"}= "<font color=#ff0000>#{math}</font>"
              %td{:width => "40%"}= "#{@math_dollar[line[0]][line[1].index(math)]}" 
          -else
            %tr
              %td
              %td{:width => "50%"}= "<font color=#ff0000>#{math}</font>"
              %td{:width => "40%"}= "#{@math_dollar[line[0]][line[1].index(math)]}" 
